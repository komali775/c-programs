#include <stdio.h>
int main()
{
  int row, column, numberOfRows = 5;
  for (row=0; row<numberOfRows; row++)
  {
    for (column=numberOfRows-row; column>1; column--)
    {
  printf(" ");
    }
    for (column=0; column<=row; column++ )
    {
      printf(" * ");
    }
    printf("\n");
  }
  return 0;
}
